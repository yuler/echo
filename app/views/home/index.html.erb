<section>
  <div class="container-main pt-16">
    <h1 class="text-display mb-6">
      Echo
    </h1>
    <p class="text-neutral-500 italic mb-12 text-sm">
      Fine-tune your ears.
    </p>

    <div class="space-y-6 text-body">
      <p>
        A free platform for practicing English listening skills.
        We publish daily posts.
      </p>
    </div>

    <% if @posts.any? %>
      <div class="mt-16">
        <h2 class="text-overline mb-6">Latest</h2>

        <div class="mt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @posts.each do |post| %>
            <%= render "posts/post_card", post: post %>
          <% end %>
        </div>

        <div class="mt-8">
          <%= link_to posts_path, class: "inline-block text-sm font-medium text-neutral-900 hover:text-neutral-600 transition-colors" do %>
            View All Posts â†’
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>
